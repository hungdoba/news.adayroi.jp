{
  "name": "news-adayroi-jp",
  "version": "1.0.0",
  "description": "A modern news website for Vietnamese people living in Japan",
  "author": "hungdoba",
  "license": "MIT",
  "homepage": "https://news.adayroi.jp",
  "repository": {
    "type": "git",
    "url": "https://github.com/hungdoba/news.adayroi.jp.git"
  },
  "keywords": [
    "nextjs",
    "vietnamese",
    "japan",
    "news",
    "blog",
    "typescript",
    "tailwindcss"
  ],
  "private": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && next-image-export-optimizer",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "new": "py content/scripts/new_post_deploy.py",
    "clean": "rm -rf .next out",
    "analyze": "cross-env ANALYZE=true next build",
    "precommit": "lint-staged",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@next/third-parties": "^15.3.2",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "next-image-export-optimizer": "^1.18.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.1.7",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^4.0.15",
    "typescript": "^5"
  }
}
